<form action="/spyro/{{research.id}}?_method=PUT" method="POST">
    <div class="form-group">
        <label for="studentNumber">Номер студенческого билета осбледуемого</label>
        <input type="text" name="studentNumber" class="form-control" value="{{research.student.studentNumber}}" readonly>
    </div>
    <div class="form-group">
        <label for="jel">ЖЕЛ (мл)</label>
        <input type="text" name="research[jel]" class="form-control" value="{{research.jel}}" required>
    </div>
    <div class="form-group">
        <label for="stanPower">Становая сила (кг)</label>
        <input type="text" name="research[stanPower]" class="form-control" value="{{research.stanPower}}" required>
    </div>
    <div class="form-group">
        <label for="wristPower">Сила запястья (кг)</label>
        <input type="text" name="research[wristPower]" class="form-control" value="{{research.wristPower}}" required>
    </div>
    <div class="form-group">
        <label for="researchDate">Дата проведения обследования</label>
        <input type="date" name="research[researchDate]" class="form-control"
            value="{{formatDate research.researchDate "YYYY-MM-DD"}}" required>
    </div>
    <div class="form-group">
        <input class="form-control btn btn-lg btn-primary" type="submit" value="Готово">
    </div>
</form>